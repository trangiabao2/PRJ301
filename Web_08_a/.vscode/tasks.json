      "problemMatcher": []
    },
    {
      "label": "Start Tomcat",
      "type": "shell",
      "command": "cmd /c \"%CATALINA_HOME%\\bin\\startup.bat\"",
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Stop Tomcat",
      "type": "shell",
      "command": "cmd /c \"%CATALINA_HOME%\\bin\\shutdown.bat\"",
      "group": "none",
      "problemMatcher": []
    }
  ]
