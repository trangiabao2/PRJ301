{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ant: build",
      "type": "shell",
      "command": "ant",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Deploy to Tomcat",
      "type": "shell",
      "command": "powershell -ExecutionPolicy Bypass -File .\\scripts\\deploy-wars.ps1",
